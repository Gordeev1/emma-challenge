{
	"name": "emma-challenge",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"start": "react-native start",
		"test": "jest",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check:ts": "npx tsc --noEmit",
		"e2e:build:ios": "detox build -c ios.sim.debug",
		"e2e:build:android": "detox build -c android.emu.debug",
		"e2e:build-release:ios": "detox build -c ios.sim.release",
		"e2e:build-release:android": "detox build -c android.emu.release",
		"e2e:test:ios": "detox test -c ios.sim.debug",
		"e2e:test:android": "detox test -c android.emu.debug",
		"e2e:test-release:ios": "detox test -c ios.sim.release",
		"e2e:test-release:android": "detox test -c android.emu.release",
		"utils:prepareContactsData": "node ./scripts/prepareContactsData.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx tsc --noEmit && lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix"
		]
	},
	"dependencies": {
		"@react-native-community/masked-view": "^0.1.10",
		"@react-navigation/native": "^5.7.3",
		"@react-navigation/stack": "^5.9.0",
		"detox": "^17.5.6",
		"lodash": "^4.17.15",
		"react": "16.13.1",
		"react-native": "0.63.3",
		"react-native-gesture-handler": "^1.8.0",
		"react-native-reanimated": "^1.13.0",
		"react-native-safe-area-context": "^3.1.8",
		"react-native-screens": "2.11.0",
		"styled-components": "4.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/runtime": "^7.8.4",
		"@react-native-community/eslint-config": "^1.1.0",
		"@types/jest": "^25.2.3",
		"@types/lodash": "^4.14.149",
		"@types/react-native": "^0.63.2",
		"@types/react-test-renderer": "^16.9.2",
		"@types/styled-components": "4.4.0",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"babel-jest": "^25.1.0",
		"eslint": "^6.5.1",
		"faker": "^5.1.0",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"lint-staged": "^10.0.8",
		"metro-react-native-babel-preset": "^0.59.0",
		"prettier": "^2.0.4",
		"react-test-renderer": "16.13.1",
		"typescript": "^3.8.3"
	},
	"jest": {
		"preset": "react-native",
		"setupFiles": [
			"./node_modules/react-native-gesture-handler/jestSetup.js"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"moduleNameMapper": {
			".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
		},
		"verbose": true
	},
	"detox": {
		"test-runner": "jest",
		"specs": "e2e",
		"configurations": {
			"ios.sim.debug": {
				"binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/MovingPictures.app",
				"build": "xcodebuild -workspace ios/MovingPictures.xcworkspace -scheme MovingPictures -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build EXCLUDED_ARCHS=arm64 ONLY_ACTIVE_ARCH=YES -quiet",
				"type": "ios.simulator",
				"name": "iPhone 11 Pro Max"
			},
			"ios.sim.release": {
				"binaryPath": "ios/build/Build/Products/Release-iphonesimulator/MovingPictures.app",
				"build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -workspace ios/MovingPictures.xcworkspace -scheme MovingPictures -configuration Release -sdk iphonesimulator -derivedDataPath ios/build ONLY_ACTIVE_ARCH=YES -quiet",
				"type": "ios.simulator",
				"name": "iPhone 11 Pro Max"
			},
			"android.emu.debug": {
				"binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
				"build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
				"type": "android.emulator",
				"name": "Pixel_3_XL_API_29"
			},
			"android.emu.release": {
				"binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
				"build": "pushd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
				"type": "android.emulator",
				"name": "Pixel_3_XL_API_29"
			}
		}
	}
}
